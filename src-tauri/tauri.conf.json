{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desto-ripper",
  "version": "0.1.0",
  "identifier": "com.desto-ripper.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "desto-ripper",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
        "bin/ffmpeg.exe",
        "bin/ffmpeg",
        "bin/yt-dlp.pyz",
        "temp"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
